<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin.add_best_student.AddStudentBestFragment"
    android:orientation="vertical">


<android.support.design.widget.AppBarLayout
    android:id="@+id/app_bar_id1"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:background="@drawable/best_std">

</android.support.design.widget.AppBarLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabTextColor="@color/colorAccent"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabBackground="@drawable/tab_selected"
        app:tabMode="fixed">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_id1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
           </android.support.v4.view.ViewPager>

</LinearLayout>